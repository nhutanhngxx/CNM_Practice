<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý các bài báo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body class="p-5">
    <h1>Xin chào, chúc bạn một ngày tốt lành!</h1>
    <hr />
    <h2>Thêm mới dữ liệu tại đây!</h2>
    <form action="/" method="POST">
      <input
        type="number"
        name="id"
        placeholder="ID dữ liệu"
        class="form-control mb-2"
      />
      <input
        type="text"
        name="name"
        placeholder="Tên bài báo"
        class="form-control mb-2"
      />
      <input
        type="text"
        name="author"
        placeholder="Tên tác giả"
        class="form-control mb-2"
      />
      <input
        type="text"
        name="isbn"
        placeholder="ISBN"
        class="form-control mb-2"
      />
      <input
        type="number"
        name="number_page"
        placeholder="Số trang"
        class="form-control mb-2"
      />
      <input
        type="number"
        name="year"
        placeholder="Năm xuất bản"
        class="form-control mb-2"
      />
      <button type="submit" class="btn btn-primary">Thêm mới</button>
    </form>
    <hr />
    <h2>Danh sách dữ liệu</h2>
    <table class="table table-hover table-bordered">
      <thead>
        <th>STT</th>
        <th>Tên bài báo</th>
        <th>Tên nhóm tác giả</th>
        <th>Chỉ số ISBN</th>
        <th>Số trang</th>
        <th>Năm xuất bản</th>
        <th>Tùy chọn</th>
      </thead>
      <tbody>
        <% if (typeof articles !== "undefined" && articles.length > 0) { %>
        <!--  -->
        <% articles.forEach((article, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= article.name %></td>
          <td><%= article.author %></td>
          <td><%= article.isbn %></td>
          <td><%= article.number_page %></td>
          <td><%= article.year %></td>
          <td>
            <button class="btn btn-warning">Sửa</button>
            <button class="btn btn-danger">Xóa</button>
          </td>
        </tr>
        <% }) %> <% } else { %>
        <tr>
          <td colspan="7" class="text-center">Không có bài báo nào</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
